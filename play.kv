<Play>
    name: 'play'
    BoxLayout:
        orientation:'vertical'
        padding: 10
        BoxLayout:
            orientation:'horizontal'

            Button:
                text:'<'
                on_press:
                    root.manager.current = 'player'
                size_hint_x: 0.3
                size_hint_y: None
                height: 30
            Label:
                text:'CONTROLS'
                size_hint_x: 0.7
                size_hint_y: None
                height: 30
        
        Widget:
        Label:
            text:''
            id : 'sttus'
            halign : 'center'
            size_hint_y: None
            height : 50
        Widget:
        BoxLayout:
            orientation:'horizontal'

            Button:
                text:'<'
            BoxLayout:
                orientation:'vertical'

                Button:
                    text:'||'
                    on_press:
                        root.pause()
                Button:
                    text:'|>'
                    on_press:
                        root.play()
            Button:
                text:'>'


        BoxLayout:
            orientation:'horizontal'
            padding: 70
            Button:
                text:'+'
                on_press:
                    root.in_vol()
            Button:
