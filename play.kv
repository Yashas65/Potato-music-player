<Play>
    name: 'play'
    BoxLayout:
        orientation:'vertical'
        padding: 10
        BoxLayout:
            orientation:'horizontal'

            Button:
                text: '<'
                on_press:
                    root.manager.current = 'player'
                size_hint_x: 0.3
                size_hint_y: None
                height: 30
            Label:
                text:'CONTROLS'
                size_hint_x: 0.7
                size_hint_y: None
                height: 30
        
        Widget:
        Label:
            text:''
            id : 'sttus'
            halign : 'center'
            size_hint_y: None
            height : 50
        Widget:
        BoxLayout:
            orientation:'horizontal'

            Button:
                text: 'restart'
                on_press:
                    root.restart()
            BoxLayout:
                orientation:'vertical'

                Button:
                    text:'||'
                    on_press:
                        root.pause()
                Button:
                    text:'|>'
                    on_press:
                        root.play()
            Button:
                text:'>'

        BoxLayout:
            orientation : 'vertical'
            Slider:
                min : 0
                max : 100
                value : 50
                steps: 5
                on_value : root.ctrl_vol(self, self.value)
        Widget:
