<Player>:
    name: 'player'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y : .03
            Button:
                text: 'add_music'
                size_hint_x: .5
                spacing: 0
                on_release: root.go_to_add_music()

            Button: 
                text: 'player'
                size_hint_x: .5
                spacing: 0


    
        BoxLayout:
            orientation:'vertical'
            padding: 10
            size_hint_y : .8
            
            Widget:
                size_hint_y: .2
            Label:
                text:'MUSIC_NAME'
                id : 'sttus'
                halign : 'center'
                size_hint_y: None
                height : 50
                font_size: '75px'
            Widget:
                size_hint_x: .2

            BoxLayout:
                orientation : 'vertical'
                height: '50px'
                Slider:
                    min : 0
                    max : 100 # to be set as total length of song in sec
                    value : 0
                    steps: 1
                    #on_value : root.ctrl_vol(self, self.value)


                BoxLayout:
                    orientation:'horizontal'
                    size_hint_y : 1 
                    padding: '5px'
                    Button:
                        text: 'restart'
                        on_press:
                            root.restart()
                    BoxLayout:
                        orientation:'vertical'

                        Button:
                            id: toggle
                            text:'||'
                            on_press:
                                root.toggle()
                    Button:
                        text:'>'

            Button:
                text:'songs'
                size_hint_x: 1
                size_hint_y : .1

                on_press:
                    root.manager.current = 'play'

