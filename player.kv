<Player>:
    name: 'player'
    BoxLayout:
        padding : 20
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 10
            Button:
                text: '<'
                size_hint_y: None
                size_hint_x: 0.3

                height: 50
                on_press: 
                    root.manager.current = 'home'    
            Label:
                text: 'songs'
                size_hint_y : None
                size_hint_x: 0.7

                height : 50

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.9
            size_hint_x: 0.9
            padding: 10
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: choose_songs
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 5
                    padding: 5

    Button:
        text:'|>'
        size_hint_x: 0.9
        size_hint_y : None

        height: 50
        
        on_press:
            root.manager.current = 'play'